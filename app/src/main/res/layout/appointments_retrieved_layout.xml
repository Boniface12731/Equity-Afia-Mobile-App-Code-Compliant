<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/dateBookedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mar 20, 2021"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginStart="10dp" />


            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_more"
                />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Details"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/patientImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/patientName"
                    android:layout_toEndOf="@+id/patientImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamau Joyce"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/patientEmail"
                    android:layout_toEndOf="@+id/patientImageView"
                    android:layout_below="@+id/patientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joyce@gmail.com"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/patientPhone"
                    android:layout_toEndOf="@+id/patientImageView"
                    android:layout_below="@+id/patientEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0725678098"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/patientDescription"
                    android:layout_toEndOf="@+id/patientImageView"
                    android:layout_below="@+id/patientPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0725678098"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"/>
            </RelativeLayout>



        </LinearLayout>


        <TextView
            android:id="@+id/doctorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Details"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:visibility="gone"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/doctorDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/doctorImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:id="@+id/doctorName"
                    android:layout_toEndOf="@+id/doctorImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngugi Willy"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/doctorEmail"
                    android:layout_toEndOf="@+id/doctorImageView"
                    android:layout_below="@+id/doctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kamaujoyce@gmail.com"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"/>
                <TextView
                android:id="@+id/doctorPhone"
                android:layout_toEndOf="@+id/doctorImageView"
                android:layout_below="@+id/doctorEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0725678098"
                android:textColor="#000"
                android:layout_marginStart="5dp"
                android:textSize="15sp"/>

                <TextView
                    android:id="@+id/doctorDepartment"
                    android:layout_toEndOf="@+id/doctorImageView"
                    android:layout_below="@+id/doctorPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dentistry"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/doctorSpecialist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorDepartment"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/doctorImageView"
                    android:text="Periodontist"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </RelativeLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/appointmentTimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointment Time: 7-9 AM"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>