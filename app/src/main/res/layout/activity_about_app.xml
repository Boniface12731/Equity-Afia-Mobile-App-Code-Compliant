<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.AboutAppActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@drawable/round_back_red10"
            app:contentScrim="?attr/colorPrimary"
            app:title="Equity Afia"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center|end"
                android:src="@drawable/neweafia"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:layout_marginBottom="25dp"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/layout_bg"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/neweafia"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:foregroundGravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profile"
                app:layout_constraintBottom_toBottomOf="@id/profile"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Who We Are"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@id/profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profile"
                app:layout_constraintBottom_toBottomOf="@id/profile"/>

            <TextView
                android:id="@+id/driving"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Our Vision"
                android:textSize="20sp"
                android:textColor="#F1420A"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintStart_toStartOf="@+id/profile"
                app:layout_constraintStart_toEndOf="@id/profile"
                app:layout_constraintEnd_toEndOf="@id/date"
                app:layout_constraintTop_toBottomOf="@+id/profile"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/vision"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/vision"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:foregroundGravity="center_vertical"
                app:layout_constraintStart_toStartOf="@+id/driving"
                app:layout_constraintTop_toBottomOf="@+id/driving"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/string1"
                android:textSize="20sp"
                android:textColor="#02136E"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintStart_toStartOf="@+id/profile"
                app:layout_constraintStart_toEndOf="@id/profile"
                app:layout_constraintEnd_toEndOf="@id/date"
                app:layout_constraintTop_toBottomOf="@+id/vision"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/mission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Our Mission"
                android:textSize="20sp"
                android:textColor="#F1420A"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintStart_toStartOf="@+id/driving"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>
            <ImageView
                android:id="@+id/missionPic"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/mission"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:foregroundGravity="center_vertical"
                app:layout_constraintStart_toStartOf="@+id/driving"
                app:layout_constraintTop_toBottomOf="@+id/mission"/>
            <TextView
                android:id="@+id/textMission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/string1"
                android:textSize="20sp"
                android:textColor="#02136E"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintStart_toStartOf="@+id/profile"
                app:layout_constraintStart_toEndOf="@id/profile"
                app:layout_constraintEnd_toEndOf="@id/date"
                app:layout_constraintTop_toBottomOf="@+id/missionPic"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>