<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/notification_image_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/roundbackbrown"
        android:orientation="vertical"
        android:layout_toEndOf="@id/notification_image_profile"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#F30404"
            android:text="Bonface Osuka"
            android:id="@+id/notification_username"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_comment"
            android:text="I like the idea"
            android:textColor="#D11B1B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_date"
            android:text="I like the idea"
            android:textColor="#EA1C1C" />
    </LinearLayout>
</RelativeLayout>